@model IEnumerable<Pedido>
@{
    ViewData["Title"] = "Pedidos Pendentes";
}

<div class="content-admin">

    <div class="container-column">
        <div class="header-content">
            <h2> Pedidos Pendentes  </h2>
            <a class="button-admin" asp-action="HistoricoPedidos" asp-controller="AdminPedido" asp-area="Admin"> Gerenciar Pedidos </a>
        </div>

        <div>
            <div class="form-admin">
                <table class="container-column">
                    <thead class="header-form">
                        <tr class="container-row">
                            <th class="content-form-2">
                                Cliente
                            </th>
                            <th class="content-form-2">
                                Preço Total
                            </th>

                            <th class="content-form-2">
                                Total Itens
                            </th>

                            <th class="content-form-2">
                                Pedido Recebido
                            </th>
                            <th class="content-form-2">
                            </th>

                        </tr>
                    </thead>
                    <tbody class="body-form">
                        @foreach (var item in Model)
                        {
                            <tr class="container-row">
                                <td class="content-form-2">
                                    @item.UserId
                                </td>

                                <td class="content-form-2">
                                    @item.PedidoTotal
                                </td>

                                <td class="content-form-2">
                                    @item.TotalItensPedido

                                </td>

                                <td class="content-form-2">
                                    @item.PedidoRecebido
                                </td>
                                <td class="content-form-2 ">
                                    <a class="button-admin" asp-action="ConfirmarPedido" asp-route-pedidoId="@item.PedidoId">Finalizar </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>
