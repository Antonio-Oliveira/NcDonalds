@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<div class="content-admin">

    <div class="container-column">
        <div class="header-content">
            <h2> Gerenciamento de Categorias </h2>
            <a class="button-admin" asp-action="Create" asp-controller="AdminCategoria" asp-area="Admin"> Criar Categoria </a>
        </div>

        <div class="">
            <div class="form-admin">
                <table class="container-column">
                    <thead class="header-form">
                        <tr class="container-row">
                            <th class="content-form-4">
                                Nome
                            </th>
                            <th class="content-form-4">
                                Descrição
                            </th>
                        </tr>
                    </thead>
                    <tbody class="body-form">
                        @foreach (var item in Model)
                        {
                            <tr class="container-row">
                                <td class="content-form-4">
                                    @item.Nome
                                </td>

                                <td class="content-form-4">
                                    <div class="content-form">
                                        @item.Descricao
                                    </div>
                                </td>
                                <td class="content-form-2 icons-form container-row">
                                    <a asp-action="Edit" asp-route-id="@item.CategoriaId"><img src="~/images/editar-arquivo.svg" /> </a>

                                    <a asp-action="Details" asp-route-id="@item.CategoriaId"><img src="~/images/visualizador.svg" /> </a>

                                    <a asp-action="Delete" asp-route-id="@item.CategoriaId"><img src="~/images/remove.svg" /> </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>



