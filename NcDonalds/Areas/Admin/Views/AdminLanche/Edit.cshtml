@model AdminLancheViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="lanche-action">

    <h1 class="title-content">Editar @Model.Nome</h1>

    <div class="container-row">

        <section class="section-container">
            <img class="img-action" src="/images/Lanches/food.svg" alt="mulher bebendo suquinho">
        </section>

        <form asp-area="Admin" asp-controller="AdminLanche" asp-action="Edit" method="post" class="inputs" role="form" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="LancheId" />

            <div class="field">
                <label asp-for="Nome" class=""></label>
                <input asp-for="Nome" class="" />
                <span asp-validation-for="Nome" class=""></span>
            </div>

            <div class="field">
                <label asp-for="Preco"></label>
                <input asp-for="Preco" />
                <span asp-validation-for="Preco"></span>
            </div>

            <div class="field">
                <label asp-for="DescricaoCurta"></label>
                <input asp-for="DescricaoCurta" />
                <span asp-validation-for="DescricaoCurta"></span>
            </div>

            <div class="field">
                <label asp-for="DescricaoDetalhada"></label>
                <input asp-for="DescricaoDetalhada" />
                <span asp-validation-for="DescricaoDetalhada"></span>
            </div>

            <div class="mb-3">
                <label for="formFile" class="form-label">Escolha a imagem do lanche: </label>
                <input asp-for="Image" class="form-control" type="file" id="formFile">
            </div>

            <div class="field">
                <label asp-for="EmEstoque" class=""></label>
                <input asp-for="EmEstoque" />
            </div>

            <div class="field">
                <label asp-for="CategoriaId" class=""></label>
                <select asp-for="CategoriaId" class="" asp-items="ViewBag.CategoriaId"></select>
            </div>

            <div class="submit-input">
                <input type="submit" class="botao-cadastrar" value="Salvar" />
            </div>

        </form>

    </div>


</div>

