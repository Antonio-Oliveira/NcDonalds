@model Lanche

<script>

    function addProduto(idProduto) {
        alert(idProduto);
    }

</script>

<div class="container-row container-page">

    <div class="img-lanche">
        <img src="@Model.ImagemURL" class="" alt="@Model.Nome" />
    </div>

    <div class="info">
        <h2 class="title">
            @Model.Nome
        </h2>

        <p class="descricao-curta"> @Model.DescricaoCurta </p>


        <div class="compra">
            <span class="preco"> @Model.Preco.ToString("c") </span>
             
            <div class="spinner-border" id="@string.Concat("spinner",Model.LancheId)" role="status" style="display:none">
                <span class="visually-hidden">Loading...</span>
            </div>

            <button class="btn-carrinho" onclick="incluirLanche(@Model.LancheId)">Incluir no Carrinho</button>
        </div>
    </div>
</div>

