@model IEnumerable<Endereco>

@{
    ViewData["Title"] = "Enderecos";
}

<h2> Endereços </h2>

<a class="button-admin" asp-area="" asp-controller="Account" asp-action="AdicionarEndereco"> Adicionar Endereço </a>

@if (Model.Count() > 0)
{
    <table class="table text-white table-hover">
        <thead>
            <tr>
                <th scope="col">Detalhe</th>
                <th scope="col">Estado</th>
                <th scope="col">Cidade</th>
                <th scope="col">Bairro</th>
                <th scope="col">Rua</th>
                <th scope="col">Numero</th>
                <th scope="col">Complemento</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var endereco in Model)
            {
                <tr>
                    <th> @endereco.Detalhe </th>
                    <td> @endereco.Estado </td>
                    <td> @endereco.Cidade </td>
                    <td> @endereco.Bairro </td>
                    <td> @endereco.Rua </td>
                    <td> @endereco.Numero </td>
                    <td> @endereco.Complemento </td>
                    <td>
                        <a asp-area="" asp-controller="Account" asp-action="UpdateEndereco" asp-route-enderecoId="@endereco.EnderecoId">Editar</a>
                        <a asp-area="" asp-controller="Account" asp-action="RemoverEndereco" asp-route-enderecoId="@endereco.EnderecoId"> Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2> Nenhum Endereço cadastrado </h2>
}

