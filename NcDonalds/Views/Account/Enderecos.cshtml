@model IEnumerable<Endereco>

@{
    ViewData["Title"] = "Enderecos";
}

<h2 style="padding: 20px; font-size: 1.2rem;"> Endereços </h2>

<a class="botao-cadastrar" style="margin:20px; display:inline-block" asp-area="" asp-controller="Account" asp-action="AdicionarEndereco"> Adicionar Endereço </a>

@if (Model.Count() > 0)
{
    <div class="accordion" id="accordionFlushExample">

        @foreach (var endereco in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="@String.Concat("flush-headingOne", endereco.EnderecoId)">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@String.Concat("flush-collapse", endereco.EnderecoId)" aria-expanded="false" aria-controls="@String.Concat("flush-collapse", endereco.EnderecoId)">
                        <p>
                            <span>@endereco.Detalhe</span>
                        </p>
                    </button>
                </h2>

                <div id="@String.Concat("flush-collapse", endereco.EnderecoId)" class="accordion-collapse collapse" aria-labelledby="@String.Concat("flush-headingOne", endereco.EnderecoId)">
                    <div class="accordion-body text-dark">
                        <p>
                            @Html.DisplayNameFor(model => endereco.Cep):
                            @Html.DisplayFor(model => endereco.Cep)
                        </p>
                        <p>
                            @Html.DisplayNameFor(model => endereco.Estado):
                            @Html.DisplayFor(model => endereco.Estado)
                        </p>
                        <p>
                            @Html.DisplayNameFor(model => endereco.Cidade):
                            @Html.DisplayFor(model => endereco.Cidade)
                        <p>
                            @Html.DisplayNameFor(model => endereco.Bairro):
                            @Html.DisplayFor(model => endereco.Bairro)
                        <p>
                            @Html.DisplayNameFor(model => endereco.Rua):
                            @Html.DisplayFor(model => endereco.Rua)
                        </p>
                        <p>
                            @Html.DisplayNameFor(model => endereco.Numero):
                            @Html.DisplayFor(model => endereco.Numero)
                        </p>
                        <p>
                            @Html.DisplayNameFor(model => endereco.Complemento):
                            @Html.DisplayFor(model => endereco.Complemento)
                        </p>
                        <nav>
                            <ul>
                                <li><a class="text-dark" asp-action="EditEndereco" asp-route-id="@endereco.EnderecoId">Editar</a></li>
                                <li><a class="text-dark" asp-action="RemoverEndereco" asp-route-id="@endereco.EnderecoId">Excluir </a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h2 style="padding: 20px; font-size: 1.2rem;"> Nenhum Endereço Cadastrado </h2>
}

